<Window x:Class="Network_Monitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Network_Monitor"
        xmlns:properties="clr-namespace:Network_Monitor.Properties"
        mc:Ignorable="d"
        Title="{x:Static properties:Resources.AppName}"
        Left="{Binding MainWindowLeft, Source={x:Static properties:Settings.Default}, Mode=TwoWay}"
        Top="{Binding MainWindowTop, Source={x:Static properties:Settings.Default}, Mode=TwoWay}"
        SizeToContent="WidthAndHeight"
        ResizeMode="CanMinimize"
        Topmost="True"
        Closing="MainWindow_OnClosing">
    <Window.DataContext>
        <local:MainWindowViewModel />
    </Window.DataContext>
    <Grid Margin="5">
        <Grid.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Courier New" />
                <Setter Property="FontSize" Value="16" />
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0"
                   ToolTip="{Binding LatencyStatus}">
            <TextBlock.Text>
                <MultiBinding StringFormat="{}⟳{0}">
                    <Binding Path="Latency" />
                </MultiBinding>
            </TextBlock.Text>
        </TextBlock>
        <TextBlock Grid.Row="2">
            <TextBlock.Text>
                <MultiBinding StringFormat="{}↓{0}">
                    <Binding Path="Download" />
                </MultiBinding>
            </TextBlock.Text>
        </TextBlock>
        <TextBlock Grid.Row="4">
            <TextBlock.Text>
                <MultiBinding StringFormat="{}↑{0}">
                    <Binding Path="Upload" />
                </MultiBinding>
            </TextBlock.Text>
        </TextBlock>
    </Grid>
</Window>