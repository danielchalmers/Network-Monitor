<Window x:Class="Network_Monitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Network_Monitor"
        xmlns:properties="clr-namespace:Network_Monitor.Properties"
        mc:Ignorable="d"
        Title="{x:Static properties:Resources.AppName}"
        Left="{Binding MainWindowLeft, Source={x:Static properties:Settings.Default}, Mode=TwoWay}"
        Top="{Binding MainWindowTop, Source={x:Static properties:Settings.Default}, Mode=TwoWay}"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStyle="None"
        Topmost="True"
        AllowsTransparency="True"
        Background="Transparent"
        Closing="MainWindow_OnClosing"
        MouseDown="MainWindow_OnMouseDown">
    <Window.DataContext>
        <local:MainWindowViewModel />
    </Window.DataContext>
    <Window.ContextMenu>
        <ContextMenu>
            <MenuItem Header="E_xit" Click="MenuItemExit_OnClick" />
        </ContextMenu>
    </Window.ContextMenu>
    <Border Background="White"
            CornerRadius="5"
            BorderBrush="Gray"
            BorderThickness="1">
        <Grid Margin="5">
            <Grid.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="FontFamily" Value="Courier New" />
                    <Setter Property="FontSize" Value="18" />
                    <Setter Property="VerticalAlignment" Value="Center" />
                    <Setter Property="HorizontalAlignment" Value="Center" />
                </Style>
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" SharedSizeGroup="Item" />
                <RowDefinition Height="5" />
                <RowDefinition Height="Auto" SharedSizeGroup="Item" />
                <RowDefinition Height="5" />
                <RowDefinition Height="Auto" SharedSizeGroup="Item" />
            </Grid.RowDefinitions>
            <!--Preserve width-->
            <TextBlock Grid.Column="2"
                       Grid.Row="0"
                       Text="100.00KB"
                       Visibility="Hidden" />
            <TextBlock Grid.Column="0"
                       Grid.Row="0"
                       Text="⟳"
                       ToolTip="Latency" />
            <TextBlock Grid.Column="2"
                       Grid.Row="0"
                       Text="{Binding Latency}"
                       ToolTip="{Binding LatencyStatus}" />
            <TextBlock Grid.Column="0"
                       Grid.Row="2"
                       Text="↓"
                       ToolTip="Download" />
            <TextBlock Grid.Column="2"
                       Grid.Row="2"
                       Text="{Binding Download}"
                       ToolTip="{Binding DownloadBytes}" />
            <TextBlock Grid.Column="0"
                       Grid.Row="4"
                       Text="↑"
                       ToolTip="Upload" />
            <TextBlock Grid.Column="2"
                       Grid.Row="4"
                       Text="{Binding Upload}"
                       ToolTip="{Binding UploadBytes}" />
        </Grid>
    </Border>
</Window>