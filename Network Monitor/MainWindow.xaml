<Window x:Class="Network_Monitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Network_Monitor"
        xmlns:properties="clr-namespace:Network_Monitor.Properties"
        xmlns:wp="clr-namespace:Network_Monitor.Placement"
        mc:Ignorable="d"
        Title="{x:Static properties:Resources.AppName}"
        Width="0"
        Height="0"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStyle="None"
        Topmost="{Binding Topmost, Source={x:Static properties:Settings.Default}, Mode=TwoWay}"
        ShowInTaskbar="{Binding ShowInTaskbar, Source={x:Static properties:Settings.Default}, Mode=TwoWay}"
        wp:WindowPlacementProperties.Placement="{Binding Placement, Source={x:Static properties:Settings.Default}, Mode=TwoWay}"
        wp:WindowPlacementProperties.TrackPlacement="True"
        AllowsTransparency="True"
        Background="Transparent"
        Closed="Window_OnClosed"
        MouseDown="MainWindow_OnMouseDown"
        UseLayoutRounding="True">
    <Window.DataContext>
        <local:MainWindowViewModel />
    </Window.DataContext>
    <Window.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Stay on _top"
                      IsCheckable="True"
                      IsChecked="{Binding Topmost, Source={x:Static properties:Settings.Default}, Mode=TwoWay}" />
            <MenuItem Header="_Show in taskbar"
                      IsCheckable="True"
                      IsChecked="{Binding ShowInTaskbar, Source={x:Static properties:Settings.Default}, Mode=TwoWay}" />
            <MenuItem>
                <MenuItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Size: " />
                        <Slider Width="60"
                                Value="{Binding Size, Source={x:Static properties:Settings.Default}, Mode=TwoWay}"
                                Minimum="50"
                                Maximum="500"
                                TickFrequency="10"
                                IsSnapToTickEnabled="True"
                                AutoToolTipPlacement="TopLeft" />
                    </StackPanel>
                </MenuItem.Header>
            </MenuItem>
            <Separator />
            <MenuItem Header="E_xit"
                      Click="MenuItemExit_OnClick" />
        </ContextMenu>
    </Window.ContextMenu>
    <Viewbox Width="{Binding Size, Source={x:Static properties:Settings.Default}, Mode=OneWay}">
        <Border Background="White"
                CornerRadius="2"
                Opacity="0.95">
            <Grid Margin="1">
                <Grid.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="FontFamily"
                                Value="Consolas" />
                        <Setter Property="VerticalAlignment"
                                Value="Center" />
                        <Setter Property="HorizontalAlignment"
                                Value="Center" />
                    </Style>
                </Grid.Resources>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="2" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="2" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="2" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <!--Preserve width-->
                <TextBlock Grid.Column="2"
                           Grid.Row="0"
                           Text="1000K"
                           Visibility="Hidden" />
                <TextBlock Grid.Column="0"
                           Grid.Row="0"
                           Text="⟳"
                           Foreground="DarkOrange" />
                <TextBlock Grid.Column="2"
                           Grid.Row="0"
                           Text="{Binding Latency}" />
                <TextBlock Grid.Column="0"
                           Grid.Row="2"
                           Text="↓"
                           Foreground="Green" />
                <TextBlock Grid.Column="2"
                           Grid.Row="2"
                           Text="{Binding Download}" />
                <TextBlock Grid.Column="0"
                           Grid.Row="4"
                           Text="↑"
                           Foreground="Blue" />
                <TextBlock Grid.Column="2"
                           Grid.Row="4"
                           Text="{Binding Upload}" />
            </Grid>
        </Border>
    </Viewbox>
</Window>